@import "./reset"
@import "./config"

#Top
	font-size 12px
	text-align right
	height 34px
	line-height 34px
	background-color #f2f2f2
	border-bottom 1px solid #e5e5e5

.header
	overflow auto
	.logo
		float left
		width 334px
		height 46px
		margin-top 10px
		background-image url(../images/logo.png)
	.menu
		float right
		height 70px
		li
			height 70px
			line-height 70px
			display inline-block
			text-align center
			width 90px
			a
				display block
				font-size 14px
				font-weight bold
				transition all 0.3s
				&:hover
				&.Stand
					color white
					background-color #0082ce

.Banner
	height 400px
	background-size auto 400px
	background-position center center
	&.index-banner
		background-image url(../images/banners/index-about.jpg)
	&.projects-banner
		background-image url(../images/banners/projects.jpg)
	&.about-banner
		background-image url(../images/banners/about.jpg)
	&.serves-banner
		background-image url(../images/banners/serves.jpg)
	&.process-banner
		background-image url(../images/banners/process.jpg)

.footer
	font-size 12px
	color white
	line-height 60px
	background-color black
	span
		margin-right 20px
		&:last-child
			float right
			margin-right 0