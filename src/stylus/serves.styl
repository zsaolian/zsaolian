@import "./common"

.Serves
	&.index
		color white
		background-color base-blue
	h5,h6
		letter-spacing 2px
		text-align center
	h5
		item-title()
	h6
		item-des()
	.head
		margin-top 50px
		dd
			text-align center
			width 25%
			display inline-block
			span
				border-style solid
				border-width 2px
				display inline-block
				line-height 44px
				width 200px
				cursor pointer
				transition all 0.3s
				&.On
					color base-blue
					cursor default
	&.index
		.head
			dd
				span
					border-color white
					color white
					&:hover
						background-color rgba(0,0,0,.3)
					&.On
						color base-blue
						background-color white
		.content
			for num in 1 3 4
				&.s-item-{num}
					background-image url('../images/icons/serves-'+num+'.png')
	&.default
		.head
			dd
				span
					border-color base-blue
					color base-blue
					&:hover
						background-color rgba(0,0,0,.1)
					&.On
						color white
						background-color base-blue
		.content
			padding-bottom 50px
			h4
				padding-top 50px
			for num in 1 3 4
				&.s-item-{num}
					background-image url('../images/icons/serves-'+num+'-blue.png')
	.content
		min-height 350px
		margin-top 20px
		padding-left 400px
		padding-bottom 50px
		background-repeat no-repeat
		background-position 60px 70px
		h4
			content-title()
		p
			content-des()
		&.s-item-2
			padding-left 0
			background-image none
			h4
				padding-left 400px
			img
				margin-bottom 25px
				margin-left 27px
	.other
		h4
			content-title()
			border-top 2px solid #999
			padding-top 50px
		img
			max-width 100%
			margin-top 20px
			margin-bottom 40px